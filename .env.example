# =========================
# Shared / Local Dev
# =========================
NODE_ENV=development

# =========================
# Supabase Postgres (use Supabase "Connection string")
# =========================
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/postgres?sslmode=require

# =========================
# Redis (local docker)
# =========================
REDIS_URL=redis://localhost:6379/0

# =========================
# Celery
# =========================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =========================
# Encryption (token storage)
# =========================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change_me_generate_with_fernet

# =========================
# Google Business Profile
# =========================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/google/oauth/callback

# =========================
# OpenAI
# =========================
OPENAI_API_KEY=your_openai_key

# =========================
# Twilio (SMS review requests)
# =========================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+1XXXXXXXXXX

# =========================
# Email Provider (choose one)
# =========================
# SendGrid
SENDGRID_API_KEY=your_sendgrid_key
EMAIL_FROM=Your Biz <no-reply@yourdomain.com>

# OR Postmark
POSTMARK_SERVER_TOKEN=your_postmark_token

# =========================
# Clerk (Frontend)
# =========================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx

# If using Clerk sign-in/sign-up routes:
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# =========================
# Backend base URL (frontend uses this)
# =========================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
