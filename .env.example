# =========================
# Shared / Local Dev
# =========================
NODE_ENV=development

# =========================
# Supabase Postgres (use Supabase "Connection string")
# =========================
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/postgres?sslmode=require

# =========================
# Redis (local docker)
# =========================
REDIS_URL=redis://localhost:6379/0

# =========================
# Celery
# =========================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =========================
# Encryption (token storage)
# =========================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change_me_generate_with_fernet

# =========================
# Google Business Profile
# =========================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/google/oauth/callback

# =========================
# OpenAI
# =========================
OPENAI_API_KEY=your_openai_key

# =========================
# Twilio (SMS review requests)
# =========================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+1XXXXXXXXXX

# =========================
# Backend base URL (frontend uses this)
# =========================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# =========================
# Supabase Auth (Frontend + Backend)
# =========================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_URL=https://your-project.supabase.co
# Required for sending Supabase Auth invite emails (onboarding links).
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
# JWT secret for HS256 token verification (Supabase Auth settings)
SUPABASE_JWT_SECRET=your_supabase_jwt_secret
# Optional overrides (defaults work for most projects)
SUPABASE_JWKS_URL=
SUPABASE_JWT_ISSUER=
SUPABASE_JWT_AUDIENCE=authenticated

# =========================
# Stripe Billing
# =========================
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
# Optional: per-plan price IDs (fallback to STRIPE_PRICE_ID if set)
STRIPE_PRICE_ID_STARTER=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID_PRO=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID_AGENCY=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxx
# Optional: per-plan price amounts in cents (fallback to STRIPE_PRICE_AMOUNT if set)
STRIPE_PRICE_AMOUNT_STARTER=0
STRIPE_PRICE_AMOUNT_PRO=9900
STRIPE_PRICE_AMOUNT_AGENCY=24900
STRIPE_PRICE_AMOUNT=0
STRIPE_PRICE_CURRENCY=usd
STRIPE_PRICE_INTERVAL=month
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx
STRIPE_SUCCESS_URL=http://localhost:3000/payments/success
STRIPE_CANCEL_URL=http://localhost:3000/payments/cancel

# =========================
# Client App URL (backend uses this for onboarding/login links)
# =========================
CLIENT_APP_URL=http://localhost:3000
NEXT_PUBLIC_CLIENT_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_APP_URL=http://localhost:3002
NEXT_PUBLIC_DISABLE_AUTH=true
